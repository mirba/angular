{
    "name": "angular-app",
    "version": "0.1.0",
    "license": "EUPL-1.1",
    "scripts": {
        "ng": "ng",
        "clean": "rimraf out-tsc dist",
        "start-proxy": "npm run clean && ng serve --proxy-config proxy.conf.json --open=true",
        "start-mock-server": "json-server --watch ./src/mock/db.js --routes ./src/mock/routes.json",
        "start": "npm run clean && parallelshell \"ng serve --proxy-config proxy-mock.conf.json --open=true --preserve-symlinks=true\" \"npm run start-mock-server\"",
        "test": "ng test --watch=false --single-run",
        "lint": "npm run tslint && npm run stylelint \"src/**/*.scss\"",
        "e2e": "ng e2e",
        "prebuild": "npm run lint && npm test",
        "build": "ng build --preserve-symlinks=true",
        "build-prod": "npm run prebuild && ng build --prod --build-optimizer --preserve-symlinks=true",
        "stylelint": "stylelint",
        "tslint": "tslint --exclude \"src/libs/**/*.*\" \"src/**/*.ts\""
    },
    "private": true,
    "devDependencies": {
        "@angular/cli": "1.7.4",
        "karma": "1.7.1",
        "typescript": "2.3.4"
    }
}

