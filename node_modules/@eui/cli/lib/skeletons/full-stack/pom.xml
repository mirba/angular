        <spring.version>4.3.4.RELEASE</spring.version>
        <spring.security.version>3.2.9.RELEASE</spring.security.version>
        <spring.data.jpa.version>1.10.4.RELEASE</spring.data.jpa.version>

        <jackson.version>2.8.5</jackson.version>

        <ecas.client.version>4.10.1</ecas.client.version>

        <swagger.version>1.5.10</swagger.version>
        <swagger.plugin.version>3.1.3</swagger.plugin.version>
        <swagger-codegen.version>2.2.1</swagger-codegen.version>
        <jersey.version>2.22.2</jersey.version>

        
        <!-- ECAS PROPERTIES -->

        <ecas.config.assuranceLevel>LOW</ecas.config.assuranceLevel>
        <ecas.config.renew>false</ecas.config.renew>
        <ecas.config.server.element/>
        <ecas.config.validate.load_test_specific/>
        <ecas.config.base.url/>
        <ecas.config.strength>PASSWORD</ecas.config.strength>
        <ecas.config.test.certificate.element/>      


        <!-- PERSISTENCE PROPERTIES -->

        <jndi.datasource.name>@app.name@JNDI</jndi.datasource.name>

        <app.datasource.name>@app.name@DS</app.datasource.name>
        <persistence.unit.name>@app.name@Persistence</persistence.unit.name>

        <eclipselink.logging.level>FINE</eclipselink.logging.level>
        <eclipselink.logging.parameters>true</eclipselink.logging.parameters>
        <eclipselink.logging.level.sql>FINE</eclipselink.logging.level.sql>


        <app.context.root>/@app.name@</app.context.root>
        <app.swagger.ui.context.root>/@app.name@-swaggerUI</app.swagger.ui.context.root>
        
        <server.address>localhost:7001</server.address>        

    </properties>




    <profiles>
        <profile>
            <id>TEST</id>
            <properties>
                <server.address>testServer:port</server.address>
            </properties>
        </profile>    
        <profile>
            <id>PROD</id>
            <properties>
                <server.address>prodServer:port</server.address>
            </properties>
        </profile>
    </profiles>


    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-compiler-plugin</artifactId>
              <configuration>
                <source>${jdk.version}</source>
                <target>${jdk.version}</target>
              </configuration>
            </plugin>
          </plugins>
       </pluginManagement> 

    </build>


