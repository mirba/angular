<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
<modelVersion>4.0.0</modelVersion>
    <parent>
      <groupId>@app.group.id@.@app.name@</groupId>
      <version>0.0.1-SNAPSHOT</version>        
      <artifactId>@app.name@</artifactId>
    </parent>
<artifactId>@app.name@-ear</artifactId>
<packaging>ear</packaging>
<name>@app.name.display@ EAR module</name>

    <dependencies>

      
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>@app.name@-web</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>@app.name@-web-swagger-ui</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>


    </dependencies>



    <build>

        <finalName>@app.name.display@</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                  <applicationName>@app.name@</applicationName>
                  <version>6</version>
                  <defaultLibBundleDir>lib</defaultLibBundleDir>
                  <displayName>@app.name.display@ EAR file</displayName>
                  <description>@app.name.display@ web application</description>  
                  <skinnyWars>false</skinnyWars>                
                  <modules>
                        <webModule>
                          <groupId>@app.group.id@.@app.name@</groupId>
                          <artifactId>@app.name@-web</artifactId>
                          <bundleFileName>@app.name@-web.war</bundleFileName>
                          <contextRoot>${app.context.root}</contextRoot>
                        </webModule>    

                        <webModule>
                          <groupId>@app.group.id@.@app.name@</groupId>
                          <artifactId>@app.name@-web-swagger-ui</artifactId>
                          <bundleFileName>@app.name@-web-swagger-ui.war</bundleFileName>
                          <contextRoot>${app.swagger.ui.context.root}</contextRoot>
                        </webModule>                                            
                  </modules>
                  <!--<outputDirectory>C:\bea1213\user_projects\domains\base_domain\autodeploy</outputDirectory>-->
                </configuration>
            </plugin>
        </plugins>
    </build>



    






</project>